@model LW_13_WebApplication.Controllers.QuizState

<h1>Quiz</h1>
<p>@Model.CurrentQuestion.Question</p>

@using (Html.BeginForm("IndexQuiz", "Quiz", FormMethod.Post))
{
    <input type="text" name="answer" class="form-input" />
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <p style="color: red;">@Model.ErrorMessage</p>
    }
    <div>
        <button type="submit" name="action" value="Next" class="form-submit" id="btn_next">Next</button>
        <button type="submit" name="action" value="Finish" class="form-submit" id="btn_finish">Finish</button>
    </div>
}

<style>
    .form-input {
        margin-top: -10px;
        margin-bottom: 10px;
        font-size: 16px;
        width: 400px;
        padding: 10px;
        border-radius: 5px;
        border-color: #e5e5e5;
        border-width: 2px;
        border-style: solid;
    }

    .form-submit {
        border-radius: 7px;
        border-color: #e5e5e5;
        border-width: 2px;
        border-style: solid;
        padding: 10px 20px;
    }

    #btn_next {
        color: #000000;
        font-size: 16px;
        background-color: #FFFFFF;
    }

    #btn_finish {
        color: #FFFFFF;
        font-size: 16px;
        background-color: #0077b6;
    }
</style>